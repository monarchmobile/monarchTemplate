  
<h1>Users</h1>
<div class="column_title pages">
	<%= content_tag :p, link_to("+ New", new_user_path), class: "new_instance_button" %>
	<ul class="user_index">
		<li class="long">First Name</li>
		<li class="long">Last Name</li>
		<li class="long">Email</li>
		
		<li class="medium">Approved</li>
	</ul>
	
</div>

<ul class="model_table userStatus" id="users_waiting_to_be_approved" data-update-url="<%= sort_users_url %>">
	<%= content_tag :h3, "Users Waiting To Be Approved (#{@users_waiting_to_be_approved.count})" %>
	<%= render @users_waiting_to_be_approved %>
</ul>

<ul class="model_table userStatus" id="approved_users" data-update-url="<%= sort_users_url %>">
	<%= content_tag :h3, "Approved Users (#{@approved_users.count})" %>
	<%= render @approved_users %>
</ul>

